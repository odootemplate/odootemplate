<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<!-- base structure of product.template, common with product.product -->
		<record id="ot_product_template_form_view_inherit" model="ir.ui.view">
			<field name="name">product.template.common.form.inherit</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_form_view"/>
			<field name="arch" type="xml">
				<xpath expr="//page[@name='sales']" position="after">
					<page string="OT Multi Images" name="ot_multi_images">
						<field name="product_images_ids" nolabel="1">
							<tree editable="bottom">
								<field name="name" required="1"/>
								<field name="image" required="1"/>
							</tree>
						</field>
					</page>
				</xpath>
			</field>
		</record>
	</data>
</openerp>